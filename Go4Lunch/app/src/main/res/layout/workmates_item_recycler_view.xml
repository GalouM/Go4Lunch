<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="@dimen/small_margin">

    <ImageView
        android:id="@+id/recycler_view_image_article"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:background="@drawable/ic_anon_user_48dp"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/recycler_view_section_article"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scarlett is eating french (Le Zinc)"
        android:textColor="@color/colorTextOnWhite"
        android:layout_gravity="center"
        android:layout_margin="@dimen/small_margin"/>
</LinearLayout>